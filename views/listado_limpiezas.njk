{% extends "base.njk" %}
{% block titulo %}Listado/Limpiezas{% endblock %}
    {% block contenido %}    
            <h1>Listado de Limpiezas de la habitacion {{habitacion.numero}}</h1>
            
                <ul>
                    {% for limpieza in limpiezas %}
                        <li><strong>Fecha:</strong> {{ limpieza.fechaHora }}</li>
                        <li><strong>Observaciones:</strong> {{ limpieza.observaciones }}</li>
                    {% endfor %}
                </ul>
                {% if (session and session.usuario) %}
                <a href="/limpiezas/nueva/{{habitacion.id}}" class="btn btn-success">Nueva limpieza</a>
                {% endif %}
    {% endblock %}
{% extends "base.njk" %}
{% block titulo %}
    Formulario habitacion
{% endblock %}
{% block contenido %}
    <form action="/habitaciones" method="post" enctype="multipart/form-data">
        {% if errores && errores.numero %}
            <p>{{ errores.numero.message }}</p>
        {% endif %}
        <label for="numero">Número de habitación:</label>
        <input type="number" id="numero" name="numero" min="1" max="100" required>
            <label for="tipo_habitacion">Tipo de habitación:</label>
            <select id="tipo_habitacion" name="tipo_habitacion" required>
                <option value="individual">Individual</option>
                <option value="doble">Doble</option>
                <option value="familiar">Familiar</option>
                <option value="suite">Suite</option>
            </select>
            {% if errores && errores.descripcion %}
                <p>{{ errores.descripcion.message }}</p>
            {% endif %}
            <label for="descripcion">Descripción de la habitación:</label>
            <textarea id="descripcion" name="descripcion" rows="4" required></textarea>
            {% if errores && errores.precio %}
                <p>{{ errores.precio.message }}</p>
            {% endif %}
            <label for="precio">Precio por noche:</label>
            <input type="number" id="precio" name="precio" step="0.01" required>
                <label for="imagen">Imagen de la habitación:</label>
                <input type="file" id="imagen" name="imagen">
                    <button type="submit">Guardar</button>
                </form>
            {% endblock %}
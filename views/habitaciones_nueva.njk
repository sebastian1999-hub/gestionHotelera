{% extends "base.njk" %}
{% block titulo %}
    Formulario habitacion
{% endblock %}
{% block contenido %}
    <form action="/habitaciones" method="post" enctype="multipart/form-data">
        {% if errores.numero %}
            <p>{{ errores.numero.message }}</p>
        {% endif %}
        <label for="numero">Número de habitación:</label>
        <input type="number" id="numero" class="form-control" name="numero" min="1" max="100" required>
        
        <label for="tipo_habitacion">Tipo de habitación:</label>
        <select id="tipo_habitacion" name="tipo_habitacion" class="form-control" required>
            <option value="individual">Individual</option>
            <option value="doble">Doble</option>
            <option value="familiar">Familiar</option>
            <option value="suite">Suite</option>
        </select>
        
        {% if errores.descripcion %}
            <p>{{ errores.descripcion.message }}</p>
        {% endif %}
        <label for="descripcion">Descripción de la habitación:</label>
        <textarea id="descripcion" class="form-control" name="descripcion" rows="4" required></textarea>
        
        {% if errores.precio %}
            <p>{{ errores.precio.message }}</p>
        {% endif %}
        <label for="precio">Precio por noche:</label>
        <input type="number" id="precio" name="precio" class="form-control" step="0.01" required>
        
        <label for="imagen">Imagen de la habitación:</label>
        <input type="file"  class="form-control" id="imagen" name="imagen">
        
        <button type="submit">Guardar</button>
    </form>
{% endblock %}
